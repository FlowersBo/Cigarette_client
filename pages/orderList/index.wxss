/* pages/orderList/index.wxss */
.orderListWrap {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 14rpx;
}

.orderList {
  width: 100%;
  height: 362rpx;
  border-radius: 30rpx;
  background-color: #fff;
  margin-top: 30rpx;
  padding: 10rpx 17rpx;
  box-shadow: 5px 5px 2px #ddd;
}

.equipment {
  width: 100%;
  height: 36%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 14rpx 0;
  position: relative;
}

.equipment-item {
  width: 100%;
  display: flex;
  align-items: center;
}

.equipment-item image {
  width: 28rpx;
  height: 30rpx;
  margin-right: 10rpx;
}

.equipment-item-name {
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  word-break: break-all;
}

.order-status {
  position: absolute;
  top: 0;
  right: 0;
  color: #6CD76A;
  display: flex;
  align-items: center;
}

.order-status image {
  width: 30rpx;
  height: 30rpx;
  margin-right: 6rpx;
}

.shopWrap {
  width: 100%;
  height: 64%;
  display: flex;
  align-items: center;
}

.shop-img {
  display: flex;
}

.shop-img image {
  width: 160rpx;
  height: 160rpx;
  margin-right: 10rpx;
}

.omit,
.goods-price {
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 36rpx;
}

.goods-price {
  height: 100%;
  justify-content: flex-end;
  margin-left: auto;
  font-weight: bold;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  word-break: break-all;
}

.number {
  font-size: 28rpx;
  margin: 10rpx 0;
  font-weight: 500;
}