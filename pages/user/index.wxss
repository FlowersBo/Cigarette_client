/* pages/user/index.wxss */
.userWrap {
  width: 100%;
  position: relative;
}

.bg-shadeTop {
  background-image: none;
}

.userNavImg {
  width: 100%;
  height: 440rpx;
}

.userNavImg image {
  width: 100%;
  height: 100%;
}

.userInfo {
  width: 100%;
  height: 440rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: absolute;
  left: 0;
  top: 0;
}


.userinfo-avatar {
  overflow: hidden;
  display: block;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-top: 160rpx;
  margin-bottom: 20rpx;
}

.userNickName {
  font-size: 15px;
  font-weight: 500;
  color: #FFFFFF;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  word-break: break-all;
}


.marketMoneyWrap {
  width: 100%;
}

.subdivideWrap {
  width: 100%;
  height: 100rpx;
  margin-top: 30rpx;
  display: flex;
  align-items: center;
  background-color: #fff;
  padding: 0 30rpx;
  font-size: 28rpx;
  /* box-shadow: 5px 5px 2px #ddd; */
}

.subdivide-icon{
  width: 40rpx;
  height: 40rpx;  
}

.subdivide {
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  word-break: break-all;
  padding-left: 30rpx;
  line-height: 100rpx;
}

.subdivideState{
  color: #ccc;
  margin-left: auto;
}













.header {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 120rpx;
  background: linear-gradient(to bottom, #f1f1f1, #AACCF9);
}

.bg_ware {
  position: absolute;
  left: 0;
  bottom: -2rpx;
  width: 100%;
  mix-blend-mode: screen;
  height: 120rpx;
}

.ship {
  width: 120rpx;
  height: 120rpx;
  position: absolute;
  top: 0rpx;
  left: 50%;
}