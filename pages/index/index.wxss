/* index.wxss */
.shopCarWrap {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #333;
}

.shopCar {
  width: 97%;
}

.equipmentWrap {
  width: 100%;
  height: 200rpx;
  position: relative;
  margin: 20rpx 0;
}

.equipmentWrap image {
  width: 100%;
  height: 100%;
}

.equipment {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  padding: 40rpx 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.equipment-item {
  width: 100%;
  display: flex;
  align-items: center;
}

.equipment-item image {
  width: 34rpx;
  height: 36rpx;
  margin-right: 10rpx;
}

.equipment-item image:first-child {
  height: 38rpx;
}


/* 列表 */
.goodsWrap {
  width: 100%;
  background-color: #fff;
  box-shadow: 0px 1px 4px 0px rgba(0, 0, 0, 0.1);
  border-radius: 15px;
  padding: 20rpx 10rpx;
}

.list {
  width: 100%;
  height: 240rpx;
  display: flex;
  align-items: center;
}

.list:last-child {
  border-bottom: 1rpx solid #ccc;
}

.goods {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.goods:first-child {
  width: 10%;
}

.goods:last-child {
  width: 30%;
  align-items: center;
}

.goods:nth-child(2) {
  width: 60%;
}

/* 单选状态 */
.radio_chek {
  width: 50rpx;
  height: 50rpx;
}

.list_img {
  width: 180rpx;
  height: 180rpx;
  border-radius: 10rpx;
}

.goods-item {
  display: flex;
}

.goodsDetail {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: 20rpx 0;
  justify-content: space-between;
  min-width: 0;
  margin-left: 10rpx;
}

.list_name {
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  word-break: break-all;
}

.list_price {
  font-size: 32rpx;
  color: #D66058;
}

/*数量加减*/
.carts-num {
  display: flex;
  align-items: center;
  text-align: center;
  height: 50rpx;
}

.view_text_center {
  width: 80rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  border: 1px solid #ccc;
  margin: 0 10rpx;
}

.carts-num .minus,
.carts-num .plus {
  color: #fff;
  text-align: center;
  width: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
  background-color: #FF9900;
  font-size: 40rpx;
  border-radius: 8rpx;
}

.carts-num .isSub,
.carts-num .isAdd {
  background-color: #FFCC7F;
}

/* 底部 */
.cont_bot {
  width: 100%;
  height: 104rpx;
  line-height: 104rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.sel_count {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 120rpx;
}

/* 全选ICON */
.total-select {
  width: 50rpx;
  height: 50rpx;
}

/* 全选标题 */
.sel_count_name {
  font-size: 30rpx;
  color: #333;
}

/* 合计金额 */
.count_price {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

.count_price text {
  font-weight: bold;
  font-size: 32rpx;
  color: #D66058;
}

.orderPayWrap {
  width: 100%;
  margin-top: 70rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 10rpx;
}

.btn {
  width: 320rpx;
  height: 90rpx;
  text-align: center;
  line-height: 90rpx;
  background-color: #FF9900;
  box-shadow: 0 0 10px #FF9900;
  color: #fff;
  font-size: 36rpx;
  border-radius: 45rpx;
}

button {
  background-color: #fff;
  border: none;
  padding: 0;
  margin: 0;
  line-height: 1;
}

.orderPayWrap input {
  outline: none;
  border: none;
  list-style: none;
}

.orderPayWrap button::after {
  border: none;
}


/* 购物车为空 */
.list_none {
  color: #999;
  text-align: center;
}

























/* 提交 */
.submit {
  width: 232rpx;
  height: 104rpx;
  line-height: 104rpx;
  right: 0rpx;
  font-size: 30rpx;
  text-align: center;
  color: #fff;
  background-color: #FF9900;
}

.navigator-hover {
  background: none;
}

/* 列表规格 */
.cart_g_name {
  position: absolute;
  left: 280rpx;
  font-size: 26rpx;
  color: #aaa;
  top: 75rpx;
}

/* 编辑 */
.edit {
  position: relative;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #f6f6f6;
}

/* 删除 */
.dele_edit {
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  right: 30rpx;
  bottom: 25rpx;
}

/* 编辑标题 */
.edit_btn {
  position: absolute;
  font-size: 26rpx;
  color: #888;
  right: 30rpx;
}

/* 收藏 */
.collert {
  position: absolute;
  font-size: 28rpx;
  right: 40rpx;
  top: 30rpx;
}

/* 收藏图标 */
.collert_img {
  position: relative;
  top: 2rpx;
  width: 28rpx;
  height: 28rpx;
}


/* 列表商品删除 */
.list_del {
  position: absolute;
  right: 220rpx;
  bottom: 20rpx;
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  font-size: 44rpx;
}