/* pages/faceVerification/infoIdCard/index.wxss */
.infoIdWrap {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 50rpx;
}

.faceWrap {
  width: 100%;
  height: 360rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 15px;
  font-family: PingFang SC;
  font-weight: 500;
  justify-content: space-between;
  padding-top: 100rpx;
}

.faceWrap image {
  width: 180rpx;
  height: 166rpx;
}

.infoCard {
  width: 100%;
}

.formFaceUpload {
  width: 100%;
  margin-top: 50rpx;
}

.formInputWrap {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #ddd;
}

.formInput-img {
  width: 26%;
  height: 100rpx;
  line-height: 130rpx;
  color: #666;
}

.formInput-img image {
  width: 40rpx;
  height: 40rpx;
  margin-top: -4rpx;
  vertical-align: middle;
}

.formInput {
  width: 72%;
  height: 100rpx;
  margin-top: 30rpx;
}

.fromBtn {
  width: 100%;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  background-color: #FF9900;
  box-shadow: 0 0 10px #FF9900;
  /* background-image: linear-gradient(90deg, #0042BB, #3600f8); */
  color: #fff;
  font-size: 40rpx;
  font-weight: bold;
  letter-spacing: 20rpx;
  display: block;
  margin-top: 250rpx;
  border-radius: 50rpx;
}

.bottomBackground {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 400rpx;
  background: linear-gradient(to bottom, #f1f1f1, #FBDF9C);
}