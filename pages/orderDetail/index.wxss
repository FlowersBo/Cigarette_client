/* pages/orderDetail/indx.wxss */
.orderDetailWrap {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #333;
}

.orderDetail {
  width: 97%;
}

.equipmentWrap {
  width: 100%;
  height: 200rpx;
  position: relative;
  margin: 20rpx 0;
}

.equipmentWrap image {
  width: 100%;
  height: 100%;
}

.equipment {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  padding: 40rpx 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.equipment-item {
  width: 100%;
  display: flex;
  align-items: center;
}

.equipment-item image {
  width: 34rpx;
  height: 36rpx;
  margin-right: 10rpx;
}

.equipment-item image:first-child {
  height: 38rpx;
}

.goodsDetail {
  width: 100%;
  background-color: #fff;
  padding: 14rpx;
  box-shadow: 0px 1px 4px 0px rgba(0, 0, 0, 0.1);
  border-radius: 15px;
}

.goods-title {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  display: flex;
  align-items: center;
  font-size: 32rpx;
  font-weight: bold;
}

.goods-title-img {
  width: 36rpx;
  height: 36rpx;
  margin-right: 10rpx;
}

.particulars {
  width: 100%;
}

.particulars-item {
  width: 100%;
  display: flex;
  align-items: center;
  height: 150rpx;
  border-bottom: 1rpx solid #ddd;
}

.particulars-item:last-child{
  border-bottom: 0;
}
.goods-item {
  width: 100%;
  display: flex;
  align-items: center;
  flex: 1;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  word-break: break-all;
  justify-content: center;
}

.goods-item:first-child {
  flex: 4;
}

.goods-item .goods-img {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  margin-right: 14rpx;
}

.goods {
  flex: 1;
  min-width: 0;
  display: flex;
  align-items: center;
}
.goodsName{
  flex: 1;
  min-width: 0;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  word-break: break-all;
}
.label {
  width: 28rpx;
  height: 34rpx;
  margin-right: 10rpx;
}

.orderWrap {
  width: 100%;
  height: 200rpx;
  position: relative;
  margin: 20rpx 0;
  background-color: #fff;
  border-radius: 15rpx;
}
.orderWrap:last-child{
  margin-bottom: 40rpx;
}
.order {
  width: 100%;
  height: 100%;
  padding: 40rpx 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.order-item {
  width: 100%;
  display: flex;
  align-items: center;
}

.order-item image {
  width: 34rpx;
  height: 36rpx;
  margin-right: 10rpx;
}

.order-item image:first-child {
  height: 34rpx;
}